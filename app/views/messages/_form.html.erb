<%= form_for(@message) do |f| %>
	<div class="container">
		<div class="form-group">
				<%= f.text_field :body, :class => "form-control input-lg", :placeholder => "message" %>
		</div>
		<div class="form-group">
				<%= f.submit "Send", :class => "btn btn-primary btn-lg center-block" %>
		</div>
	</div>
<% end %>